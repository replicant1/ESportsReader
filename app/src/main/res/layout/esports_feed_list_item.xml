<?xml version="1.0" encoding="utf-8"?>
<!--
Item in a list of ESports Feeds (Sources). Each item is an individual eSports Feed which has two
text labels : a name and a brief description
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@android:drawable/list_selector_background"
              android:paddingBottom="8dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="8dp">

    <!-- Name of the news feed -->

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:textColor="@color/Black"
        android:textSize="18sp"/>

    <!-- Brief description of the news feed -->

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/text2"
        android:layout_below="@id/text2"
        android:background="@android:color/transparent"
        android:textColor="@color/Gray"
        android:textSize="16sp"/>

</LinearLayout>